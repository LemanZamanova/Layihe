@model UpdateCarVM
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Car</h4>
                <form method="post" enctype="multipart/form-data" class="forms-sample">
                    <div class="form-group">
                        <img style="width:200px;height:auto;" src="~/assets/images/cars/@Model.PrimaryImage" />
                        <input type="hidden" asp-for="PrimaryImage" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="MainPhoto">New Main Image</label>
                        <input asp-for="MainPhoto" accept="image/*" class="form-control">
                        <span class="text-danger" asp-validation-for="MainPhoto"></span>
                    </div>
                    <div class="form-group d-flex flex-wrap gap-3">
                        @if (Model.CarImages != null && Model.CarImages.Any())
                        {
                            @foreach (var img in Model.CarImages)
                            {
                                <div class="position-relative">
                                    <img src="~/assets/images/cars/@img.ImageUrl" style="width:150px;height:100px;" />
                                    <button class="btn btn-danger position-absolute top-0 end-0 custom-delete" type="button">X</button>
                                    <input type="hidden" value="@img.Id" asp-for="ImageIds" />
                                </div>
                            }
                        }
                    </div>
                    <div class="form-group">
                        <label asp-for="AdditionalPhotos">Add More Images</label>
                        <input asp-for="AdditionalPhotos" accept="image/*" class="form-control" multiple />
                    </div>

                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DailyPrice">Daily Price</label>
                        <input asp-for="DailyPrice" class="form-control" />
                        <span class="text-danger" asp-validation-for="DailyPrice"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Year">Year</label>
                        <input asp-for="Year" class="form-control" />
                        <span class="text-danger" asp-validation-for="Year"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FuelTypeId">Fuel Type</label>
                        <select asp-for="FuelTypeId" asp-items="@(new SelectList(Model.FuelTypes, "Id", "Name"))" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="TransmissionTypeId">Transmission</label>
                        <select asp-for="TransmissionTypeId" asp-items="@(new SelectList(Model.TransmissionTypes, "Id", "Name"))" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="DriveTypeId">Drive Type</label>
                        <select asp-for="DriveTypeId" asp-items="@(new SelectList(Model.DriveTypes, "Id", "Name"))" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="BodyTypeId">Body Type</label>
                        <select asp-for="BodyTypeId" asp-items="@(new SelectList(Model.BodyTypes, "Id", "Name"))" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleTypeId">Vehicle Type</label>
                        <select asp-for="VehicleTypeId" asp-items="@(new SelectList(Model.VehicleTypes, "Id", "Name"))" class="form-control"></select>
                    </div>

                    <div class="form-group">
                        <label>Features</label>
                        @foreach (var feature in Model.Features)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@feature.Id" name="FeatureIds"
                                @(Model.FeatureIds.Contains(feature.Id) ? "checked" : "") id="feat_@feature.Id" />
                                <label class="form-check-label" for="feat_@feature.Id">@feature.Name</label>
                            </div>
                        }
                    </div>

                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section DeleteImages {
    <script>
        var btns = document.querySelectorAll(".custom-delete")
        for (let i = 0; i < btns.length; i++) {
            btns[i].addEventListener("click", function () {
                btns[i].parentElement.remove()
            })
        }
    </script>
}
