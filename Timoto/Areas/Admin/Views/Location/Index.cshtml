@model List<Timoto.Models.Location>
@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Locations</h4>
                <a asp-action="Create" class="btn btn-success mb-3">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Cars Count</th>
                                <th>Created Date</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var location in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@location.Name</td>
                                    <td>@(location.Cars?.Count ?? 0)</td>
                                    <td>@location.CreatedAt.ToString("d MMMM yyyy HH:mm")</td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@location.Id" class="btn btn-warning">
                                            <i class="mdi mdi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@location.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
