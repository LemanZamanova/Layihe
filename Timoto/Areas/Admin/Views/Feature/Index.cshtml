@model List<Timoto.Models.Feature>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Features</h4>
                <a asp-action="Create" class="btn btn-success mb-3"> Create </a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Created Date</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var feature in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@feature.Name</td>
                                    <td>@feature.CreatedAt.ToString("d MMMM yyyy HH:mm")</td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@feature.Id" class="btn btn-warning">
                                            <i class="mdi mdi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@feature.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
