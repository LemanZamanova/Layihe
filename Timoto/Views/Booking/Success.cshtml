@model Timoto.Models.Booking
@{
    ViewData["Title"] = "Payment Successful";
}

<style>
    .success-background {
        min-height: 100vh;
        background: url('/assets/images/background/12.jpg') center/cover no-repeat;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-opacity-90 {
        background-color: rgba(255, 255, 255, 0.92);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 600px;
        width: 100%;
    }

    .emoji-large {
        font-size: 60px;
    }
</style>

<div class="success-background">
    <div class="bg-opacity-90">
        <div class="emoji-large mb-3">✅</div>

        @if (ViewBag.Message != null)
        {
            <h2 class="text-warning mb-3">Notice</h2>
            <p>@ViewBag.Message</p>
        }
        else
        {
            <h2 class="text-success mb-3">Payment Successful!</h2>
            <p>Your car booking for <strong>@Model.Car.Name</strong> has been confirmed.</p>
            <p><strong>From:</strong> @Model.StartDate.ToString("dd MMM yyyy HH:mm")</p>
            <p><strong>To:</strong> @Model.EndDate.ToString("dd MMM yyyy HH:mm")</p>
            <p>We’ve also sent a confirmation to <strong>@Model.Email</strong>.</p>
        }

        <a href="/Car/Index" class="btn btn-success mt-4">Return to Cars</a>
    </div>
</div>
