@model ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
}

<style>
    .verify-section-img {
        min-height: 100vh;
        overflow: hidden;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
    }

    .bg-opacity-90 {
        background-color: rgba(255, 255, 255, 0.9);
    }

    .card-content-wrap {
        max-width: 600px;
        word-break: break-word;
        overflow-wrap: break-word;
        white-space: normal;
    }
</style>

<section class="position-relative verify-section-img d-flex align-items-center justify-content-center">
    <img src="~/assets/images/background/2.jpg" class="background-image" alt="Background">

    <div class="container position-relative z-1">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="card p-4 shadow-lg border-0 rounded-4 bg-white bg-opacity-90 card-content-wrap">

                    <h4 class="text-center mb-4">Set a New Password</h4>
                    <p class="text-center text-muted">
                        Enter your new password and confirm it to reset your account.
                    </p>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }


                    <form asp-action="ResetPassword" method="post" autocomplete="off">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">New Password</label>
                            <input asp-for="Password" class="form-control" placeholder="Enter new password..." autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter new password..." autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Reset Password</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
