@{
    ViewData["Title"] = "Verification";
}

<style>
    .verify-section-img {
        min-height: 100vh;
        overflow: hidden;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
    }

    .bg-opacity-90 {
        background-color: rgba(255, 255, 255, 0.9);
    }
</style>

<section class="position-relative verify-section-img d-flex align-items-center justify-content-center">

    <!-- Background image -->
    <img src="~/assets/images/background/2.jpg" class="background-image" alt="Background">

    <!-- Overlay and content -->
    <div class="container position-relative z-1">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7 col-sm-10">
                <div class="card p-4 shadow-lg border-0 rounded-4 bg-white bg-opacity-90">

                    <h4 class="text-center mb-4">Enter Verification Code</h4>

                    @if (ViewData.ModelState.Values.SelectMany(x => x.Errors).Any())
                    {
                        <div class="alert alert-danger">
                            @foreach (var err in ViewData.ModelState.Values.SelectMany(x => x.Errors))
                            {
                                <p class="mb-0">@err.ErrorMessage</p>
                            }
                        </div>
                    }

                    <form asp-action="VerifyCode" method="post">
                        <div class="mb-3">
                            <label for="inputCode" class="form-label">Verification Code</label>
                            <input type="text" name="inputCode" class="form-control" placeholder="Enter the code..." required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Verify</button>
                        @Html.Hidden("__RequestVerificationToken", ViewData["__RequestVerificationToken"])
                        @Html.AntiForgeryToken()
                    </form>

                    <form asp-action="ResendCode" method="post" class="mt-3 text-center">
                        @Html.AntiForgeryToken()
                        <p class="mb-2">Didn't receive the code?</p>
                        <button type="submit" class="btn btn-outline-secondary btn-sm">Resend Code</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
