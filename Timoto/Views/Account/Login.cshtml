                                        @*     </div> *@
                                        @*     <div class="col-lg-6"> *@
                                        @*         <a class="btn-sc btn-fullwidth mb10" href="#"><img src="~/assets/images/svg/facebook_icon.svg" alt="">Facebook</a> *@
                                        @*     </div> *@
                                        @* </div> *@
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </section>
        </div>
        <!-- content close -->