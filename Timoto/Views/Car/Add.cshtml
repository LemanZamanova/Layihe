@model Timoto.ViewModels.CarFormVM

@{
    ViewData["Title"] = "Add Car";
}



<div class="no-bottom no-top" id="content">
    <div id="top"></div>

    <section id="section-hero" aria-label="section" class="jarallax text-light" style="padding-top: 200px;">

        <img src="~/assets/images/background/4.jpg" class="jarallax-img" alt="">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="de-images">
                        <img class="di-small-2" src="~/assets/images/misc/e2.jpg" alt="">
                        <img class="di-big img-fluid" src="~/assets/images/misc/e1.jpg" alt="">
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <h5>Welcome to Timoto</h5>
                    <h1>Turn Your <span class="id-color">Car</span> into a Source of Income</h1>
                    <p class="lead">List your personal car on Timoto, manage its availability easily and earn while staying in control — activate, deactivate or edit anytime.</p>
                    <a class="btn-main" href="#one">Add Your Car</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Add Car Form -->
    <section id="one" class="pt40 pb40" style="background: #fff; box-shadow: rgba(0, 0, 0, 0.1) 0px 8px 24px;">
        <div class="container">
            <h1 class="text-center" style="color:#79CA5C; margin-top:20px; margin-bottom:70px;">Add Your Car</h1>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-action="Add" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
               

                <div class="row">
                    <!-- LEFT COLUMN -->
                    <div class="col-md-6">
                        @* Text Inputs *@
                        <div class="form-group mb-3">
                            <label asp-for="Car.Name" class="form-label">Car Name</label>
                            <input asp-for="Car.Name" class="form-control" />
                            <span asp-validation-for="Car.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.DailyPrice" class="form-label">Daily Price ($)</label>
                            <input asp-for="Car.DailyPrice" class="form-control" type="number" />
                            <span asp-validation-for="Car.DailyPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.Year" class="form-label">Year</label>
                            <input asp-for="Car.Year" class="form-control" type="number" />
                            <span asp-validation-for="Car.Year" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.Seats" class="form-label">Seats</label>
                            <input asp-for="Car.Seats" class="form-control" type="number" />
                            <span asp-validation-for="Car.Seats" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.Doors" class="form-label">Doors</label>
                            <input asp-for="Car.Doors" class="form-control" type="number" />
                            <span asp-validation-for="Car.Doors" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.LuggageVolume" class="form-label">Luggage Volume (L)</label>
                            <input asp-for="Car.LuggageVolume" class="form-control" />
                            <span asp-validation-for="Car.LuggageVolume" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.EngineSize" class="form-label">Engine Size (cc)</label>
                            <input asp-for="Car.EngineSize" class="form-control" />
                            <span asp-validation-for="Car.EngineSize" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.FuelEconomy" class="form-label">Fuel Economy (L/100km)</label>
                            <input asp-for="Car.FuelEconomy" class="form-control" />
                            <span asp-validation-for="Car.FuelEconomy" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.ExteriorColor" class="form-label">Exterior Color</label>
                            <input asp-for="Car.ExteriorColor" class="form-control" />
                            <span asp-validation-for="Car.ExteriorColor" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.InteriorColor" class="form-label">Interior Color</label>
                            <input asp-for="Car.InteriorColor" class="form-control" />
                            <span asp-validation-for="Car.InteriorColor" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.Mileage" class="form-label">Milleage</label>
                            <input asp-for="Car.Mileage" class="form-control" > 
                            <span asp-validation-for="Car.Mileage" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.Description" class="form-label">Description</label>
                            <textarea asp-for="Car.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Car.Description" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- RIGHT COLUMN -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Car.LocationId" class="form-label">Select Location</label>
                            <select asp-for="Car.LocationId" class="form-control select2" asp-items="@(new SelectList(Model.Locations, "Id", "Name"))">
                                <option value="">Select...</option>
                            </select>
                            <span asp-validation-for="Car.LocationId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.Location" class="form-label">Optional Location (e.g., 'near metro')</label>
                            <input asp-for="Car.Location" class="form-control" />
                            <span asp-validation-for="Car.Location" class="text-danger"></span>
                        </div>
                        <p class="text-muted small">
                            You can find your car’s exact <strong>latitude</strong> and <strong>longitude</strong> by right-clicking on the map in <a href="https://maps.google.com" target="_blank">Google Maps</a> and selecting <em>"What's here?"</em>. Coordinates like <code>40.4093</code> (latitude) and <code>49.8671</code> (longitude) will appear. Copy and paste them into the fields below.
                        </p>
                        <div class="form-group mb-3">
                            <label asp-for="Car.Latitude" class="form-label">Latitude</label>
                            <input asp-for="Car.Latitude" class="form-control" />
                            <span asp-validation-for="Car.Latitude" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.Longitude" class="form-label">Longitude</label>
                            <input asp-for="Car.Longitude" class="form-control" />
                            <span asp-validation-for="Car.Longitude" class="text-danger"></span>
                        </div>

                        @* Dropdowns *@
                        <div class="form-group mb-3">
                            <label asp-for="Car.FuelTypeId" class="form-label">Fuel Type</label>
                            <select asp-for="Car.FuelTypeId" class="form-control select2" asp-items="Model.FuelTypes">
                                <option disabled selected>Choose fuel type</option>
                            </select>
                            <span asp-validation-for="Car.FuelTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.TransmissionTypeId" class="form-label">Transmission</label>
                            <select asp-for="Car.TransmissionTypeId" class="form-control select2" asp-items="Model.TransmissionTypes">
                                <option disabled selected>Choose transmission</option>
                            </select>
                            <span asp-validation-for="Car.TransmissionTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.DriveTypeId" class="form-label">Drive Type</label>
                            <select asp-for="Car.DriveTypeId" class="form-control select2" asp-items="Model.DriveTypes">
                                <option disabled selected>Choose drive type</option>
                            </select>
                            <span asp-validation-for="Car.DriveTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.VehicleTypeId" class="form-label">Vehicle Type</label>
                            <select asp-for="Car.VehicleTypeId" class="form-control select2" asp-items="Model.VehicleTypes">
                                <option disabled selected>Choose vehicle type</option>
                            </select>
                            <span asp-validation-for="Car.VehicleTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Car.BodyTypeId" class="form-label">Body Type</label>
                            <select asp-for="Car.BodyTypeId" class="form-control select2" asp-items="Model.BodyTypes">
                                <option disabled selected>Choose body type</option>
                            </select>
                            <span asp-validation-for="Car.BodyTypeId" class="text-danger"></span>
                        </div>

                        @* Features *@
                        <div class="form-group mb-3">
                            <label>Features</label>
                            <div class="de_form">
                                @foreach (var feature in Model.AllFeatures)
                                {
                                    <div class="de_checkbox">
                                        <input id="feature_@feature.Id" name="SelectedFeatureIds" type="checkbox" value="@feature.Id" @(Model.SelectedFeatureIds?.Contains(feature.Id) == true ? "checked" : "") />
                                        <label for="feature_@feature.Id">@feature.Name</label>
                                    </div>
                                }
                            </div>
                        </div>

                        @* File uploads *@
                        <div class="form-group mb-3">
                            <label class="form-label">Main Image</label>
                            <input type="file" name="MainImage" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Additional Images</label>
                            <input type="file" name="OtherImages" class="form-control" multiple />
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn-main">Submit Car Listing</button>
                </div>
            </form>
            <!-- ✅ FORM BİTİR -->
        </div>
    </section>
</div>

<a href="#" id="back-to-top"></a>

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    $(document).ready(function () {
        $('.select2').select2({
            placeholder: "Search for a location",
            allowClear: true,
            width: '100%',
            minimumInputLength: 3,
            closeOnSelect: true
        });
    });
</script>
