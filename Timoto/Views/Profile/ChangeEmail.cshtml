@{
    ViewData["Title"] = "Verify Email Change";
}

<style>
    .verify-section-img {
        min-height: 100vh;
        overflow: hidden;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
    }

    .bg-opacity-90 {
        background-color: rgba(255, 255, 255, 0.9);
    }
</style>


    <img src="~/assets/images/background/12.jpg" class="background-image" alt="Background">
<section  class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div style="margin-top:100px" class="card shadow p-4">
                <h4 class="text-center mb-4">Email Verification</h4>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                @if (TempData["InfoMessage"] != null)
                {
                    <div class="alert alert-info">@TempData["InfoMessage"]</div>
                }

                @if (ViewData.ModelState.Values.SelectMany(x => x.Errors).Any())
                {
                    <div class="alert alert-danger">
                        @foreach (var err in ViewData.ModelState.Values.SelectMany(x => x.Errors))
                        {
                            <p class="mb-0">@err.ErrorMessage</p>
                        }
                    </div>
                }

                <form asp-action="ChangeEmailVerify" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="inputCode" class="form-label">Verification Code</label>
                        <input type="text" name="inputCode" class="form-control" placeholder="Enter the code..." required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Verify</button>
                </form>

                <form asp-action="ResendChangeEmailCode" method="post" class="text-center mt-3">
                    @Html.AntiForgeryToken()
                    <p class="mb-1">Didn't receive the code?</p>
                    <button type="submit" class="btn btn-outline-secondary btn-sm">Resend Code</button>
                </form>

            </div>
        </div>
    </div>

</section>
