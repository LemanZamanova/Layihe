@model Timoto.ViewModels.ProfileVM

@{
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
    ViewData["Title"] = "My Orders";
}

@section ProfileContent {
    @if (Model.ScheduledBookings.Any())
    {
        <div class="card p-4 rounded-5 mb25">
            <h4>Scheduled Orders</h4>
            <table class="table de-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Car Name</th>
                        <th>Location</th>
                      
                        <th>Pick Up Date</th>
                        <th>Return Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.ScheduledBookings)
                    {
                        <tr>
                            <td><div class="badge bg-gray-100 text-dark">#@booking.Id</div></td>
                            <td>@booking.Car.Name</td>
                            <td>@booking.Car.Location</td>
                            
                            <td>@booking.StartDate.ToString("MMMM dd, yyyy")</td>
                            <td>@booking.EndDate.ToString("MMMM dd, yyyy")</td>
                            <td><div class="badge rounded-pill bg-warning">scheduled</div></td>
                            <td class="d-flex align-items-center gap-2">
                                <form asp-action="CancelBooking" asp-controller="Profile" method="post" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                    <input type="hidden" name="id" value="@booking.Id" />
                                    <button type="submit" class="badge rounded-pill bg-danger ">Cancel</button>
                                </form>
                                <a asp-action="DownloadReceipt" asp-controller="Profile" asp-route-id="@booking.Id"
                                   class="badge rounded-pill bg-secondary ">
                                    <i class="icon_folder_download me-1"></i>
                                    <span style=""></span>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (Model.CompletedBookings.Any())
    {
        <div class="card p-4 rounded-5 mb25">
            <h4>Completed Orders</h4>
            <table class="table de-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Car Name</th>
                        <th>Location</th>
                      
                        <th>Pick Up Date</th>
                        <th>Return Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.CompletedBookings)
                    {
                        <tr>
                            <td><div class="badge bg-gray-100 text-dark">#@booking.Id</div></td>
                            <td>@booking.Car.Name</td>
                            <td>@booking.Car.Location</td>
                           
                            <td>@booking.StartDate.ToString("MMMM dd, yyyy")</td>
                            <td>@booking.EndDate.ToString("MMMM dd, yyyy")</td>
                            <td><div class="badge rounded-pill bg-success">completed</div></td>
                            <td>
                                <a asp-action="DownloadReceipt" asp-controller="Profile" asp-route-id="@booking.Id" class="badge rounded-pill bg-secondary">
                                    <i class="  icon_folder_download"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (Model.CancelledBookings.Any())
    {
        <div class="card p-4 rounded-5 mb25">
            <h4>Cancelled Orders</h4>
            <table class="table de-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Car Name</th>
                        <th>Location</th>
                        
                        <th>Pick Up Date</th>
                        <th>Return Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.CancelledBookings)
                    {
                        <tr>
                            <td><div class="badge bg-gray-100 text-dark">#@booking.Id</div></td>
                            <td>@booking.Car.Name</td>
                            <td>@booking.Car.Location</td>
                            
                            <td>@booking.StartDate.ToString("MMMM dd, yyyy")</td>
                            <td>@booking.EndDate.ToString("MMMM dd, yyyy")</td>
                            <td><div class="badge rounded-pill bg-danger">cancelled</div></td>
                            <td>
                                <a asp-action="DownloadReceipt" asp-controller="Profile" asp-route-id="@booking.Id" class="badge rounded-pill bg-secondary">
                                    <i class="  icon_folder_download"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (!Model.ScheduledBookings.Any() && !Model.CompletedBookings.Any() && !Model.CancelledBookings.Any())
    {
        <div class="alert alert-info mt-4">You have no bookings yet.</div>
    }
}
